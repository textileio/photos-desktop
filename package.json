{
  "name": "photos-desktop",
  "version": "0.1.3",
  "description": "Textile Photos",
  "homepage": "./",
  "main": "public/electron.js",
  "author": "Textile",
  "license": "MIT",
  "keywords": [
    "desktop",
    "textile",
    "photos",
    "electron",
    "beta"
  ],
  "dependencies": {
    "@textile/js-http-client": "0.2.20",
    "babel-plugin-styled-components": "^1.10.0",
    "copy-to-clipboard": "^3.2.0",
    "electron-is-dev": "^1.1.0",
    "is-electron": "^2.2.0",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "moment": "^2.24.0",
    "query-string": "^6.5.0",
    "react": "^16.8.3",
    "react-animate-height": "^2.0.7",
    "react-dom": "^16.8.3",
    "react-moment": "^0.8.4",
    "react-semantic-toasts": "^0.5.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0",
    "styled-components": "^4.1.3",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "craco start",
    "dev": "concurrently \"cross-env BROWSER=none yarn craco start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "predist": "yarn build",
    "dist": "build --x64 --c.extraMetadata.main=public/electron.js",
    "build": "craco build",
    "test": "craco test",
    "credit": "node ./scripts/contributors.js",
    "lint": "./node_modules/tslint/bin/tslint  -c tslint.json --project .",
    "preversion": "yarn credit",
    "release": "yarn version --patch",
    "postversion": "git push --follow-tags",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@craco/craco": "^3.5.0",
    "@ef-carbon/url": "^2.4.3",
    "@textile/tslint-rules": "^1.0.3",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/uuid": "^3.4.4",
    "babel-preset-mobx": "^2.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.7",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "markdown-magic": "^0.1.25",
    "markdown-magic-github-contributors": "^0.0.3",
    "react-scripts": "2.1.5",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "io.textile.photos.desktop",
    "artifactName": "TextilePhotos-v${version}.${ext}",
    "compression": "normal",
    "productName": "Textile Photos",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/assets/icon.*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "category": "Network",
      "icon": "assets/icon.png",
      "target": [
        "snap",
        "AppImage"
      ]
    }
  }
}
